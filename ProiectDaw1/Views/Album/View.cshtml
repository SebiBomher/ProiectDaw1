@model IEnumerable<ProiectDaw1.Models.Image>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
</br>
@{
    int i = 1;
    if (Model == null)
    {
        <h2>There are no Photos</h2>
    }
    else
    {
        foreach (var item in Model)
        {

            var base64 = Convert.ToBase64String(item.ByteString);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            <a href="/Image/View/@item.ImageId"><img src="@imgSrc" width="250" height="250" /></a>
            if (i % 4 == 0)
            {
                <br>
                </br>
            }
            i++;
        }
    }
}
<br>
</br>


@if (Request.UrlReferrer != null)
{
    <a class="bottomNav" onclick="history.go(-1); return false;" href="#"><button class="btn btn-default" type="submit" value="Search">Back to Albums</button></a><br />
}


