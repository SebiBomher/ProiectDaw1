@model IEnumerable<ProiectDaw1.Models.Album>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="modal-title">Albums</h2>

<p>
    <a href="/Album/Add/@Url.RequestContext.RouteData.Values["id"]"><button class="btn btn-default" type="submit" value="Search">Add New Album</button></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div class="btn-group btn-group-lg" role="group" aria-label="">
                    <a href="/Album/Edit/@item.AlbumId"><button class="btn btn-default" type="submit" value="Search">Edit Name</button></a>
                    <a href="/Album/View/@item.AlbumId"><button class="btn btn-default" type="submit" value="Search">View</button></a>
                    <a href="/Album/Delete/@item.AlbumId"><button class="btn btn-default" type="submit" value="Search">Delete</button></a>
                    <a href="/Image/Add/@item.AlbumId"><button class="btn btn-default" type="submit" value="Search">Add New Photo</button></a>
                </div>
            </td>
        </tr>
    }

</table>
